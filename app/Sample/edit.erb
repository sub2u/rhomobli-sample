<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @sample.name %></h1>
    <a href="<%= url_for :action => :show, :id => @sample.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @sample.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @sample.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="sample[name]" class="fieldLabel">Name</label>
            <input type="text" id="sample[name]" name="sample[name]" value="<%= @sample.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="sample[age]" class="fieldLabel">Age</label>
            <input type="text" id="sample[age]" name="sample[age]" value="<%= @sample.age %>" <%= placeholder( "Age" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="sample[grade]" class="fieldLabel">Grade</label>
            <input type="text" id="sample[grade]" name="sample[grade]" value="<%= @sample.grade %>" <%= placeholder( "Grade" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="sample[class]" class="fieldLabel">Class</label>
            <input type="text" id="sample[class]" name="sample[class]" value="<%= @sample.class %>" <%= placeholder( "Class" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
