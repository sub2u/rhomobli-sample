<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @sample.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @sample.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="sample[name]" class="fieldLabel">Name</label>
            <input type="text" id="sample[name]" name="sample[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="sample[age]" class="fieldLabel">Age</label>
            <input type="text" id="sample[age]" name="sample[age]" <%= placeholder("Age") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="sample[grade]" class="fieldLabel">Grade</label>
            <input type="text" id="sample[grade]" name="sample[grade]" <%= placeholder("Grade") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="sample[class]" class="fieldLabel">Class</label>
            <input type="text" id="sample[class]" name="sample[class]" <%= placeholder("Class") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
