<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @sample.object %>
    <h1>Edit <%= @sample.name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @sample.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @sample.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="sample[name]" value="<%= @sample.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Age: </td>
              <td class="itemValue"><input type="text" name="sample[age]" value="<%= @sample.age %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Grade: </td>
              <td class="itemValue"><input type="text" name="sample[grade]" value="<%= @sample.grade %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Class: </td>
              <td class="itemValue"><input type="text" name="sample[class]" value="<%= @sample.class %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
